rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /documents/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (
        userId == request.auth.uid ||
        exists(/databases/$(database)/documents/shares/{shareId}
          where shareId.documentId == request.path[4] &&
          shareId.sharedWithEmail == request.auth.token.email)
      );
      allow write: if request.auth != null && 
        (userId == request.auth.uid || request.resource.size < 10 * 1024 * 1024);
    }
    
    match /profile/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && userId == request.auth.uid;
    }
  }
}
